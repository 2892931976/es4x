        <module>generator/io.vertx/vertx-auth-oauth2</module>
        <module>generator/io.vertx/vertx-auth-shiro</module>
        <module>generator/io.vertx/vertx-bridge-common</module>
        <module>generator/io.vertx/vertx-cassandra-client</module>
