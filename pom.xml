        <module>generator/io.vertx/vertx-service-discovery</module>
        <module>generator/io.vertx/vertx-service-discovery-backend-consul</module>
        <module>generator/io.vertx/vertx-service-discovery-backend-redis</module>
        <module>generator/io.vertx/vertx-service-discovery-backend-zookeeper</module>
        <module>generator/io.vertx/vertx-service-discovery-bridge-consul</module>
        <module>generator/io.vertx/vertx-service-discovery-bridge-docker</module>
        <module>generator/io.vertx/vertx-service-discovery-bridge-docker-links</module>
