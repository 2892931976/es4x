        <module>generator/io.vertx/vertx-config</module>
        <module>generator/io.vertx/vertx-config-consul</module>
        <module>generator/io.vertx/vertx-config-git</module>
        <module>generator/io.vertx/vertx-config-hocon</module>
        <module>generator/io.vertx/vertx-config-kubernetes-configmap</module>
        <module>generator/io.vertx/vertx-config-redis</module>
        <module>generator/io.vertx/vertx-config-spring-config-server</module>
        <module>generator/io.vertx/vertx-config-vault</module>
        <module>generator/io.vertx/vertx-config-yaml</module>
        <module>generator/io.vertx/vertx-config-zookeeper</module>
        <module>generator/io.vertx/vertx-consul-client</module>
        <!--<module>io.vertx/vertx-consul-service</module>-->
        <module>generator/io.vertx/vertx-dropwizard-metrics</module>
        <!--<module>io.vertx/vertx-grpc</module>-->
        <!--<module>io.vertx/vertx-hawkular-metrics</module>-->
        <!--<module>io.vertx/vertx-hazelcast</module>-->
        <module>generator/io.vertx/vertx-health-check</module>
        <!--<module>io.vertx/vertx-http-service-factory</module>-->
        <!--<module>io.vertx/vertx-maven-service-factory</module>-->
        <!--<module>io.vertx/vertx-ignite</module>-->
        <!--<module>io.vertx/vertx-infinispan</module>-->
        <!--<module>io.vertx/vertx-jca</module>-->
        <module>generator/io.vertx/vertx-jdbc-client</module>
        <!--<module>io.vertx/vertx-jgroups</module>-->
        <!--<module>io.vertx/vertx-junit5</module>-->
        <module>generator/io.vertx/vertx-jwt</module>
        <module>generator/io.vertx/vertx-kafka-client</module>
        <module>generator/io.vertx/vertx-mail-client</module>
        <!--<module>io.vertx/vertx-mail-service</module>-->
        <module>generator/io.vertx/vertx-micrometer-metrics</module>
        <module>generator/io.vertx/vertx-mongo-client</module>
